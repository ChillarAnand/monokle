{
  "name": "@monokle-desktop/shared",
  "version": "1.0.0",
  "description": "A place to share code between Main and Render processes",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "rimraf build && tsc && node packaging.js",
    "dev": "nodemon -e ts -w ./src -x npm run build"
  },
  "devDependencies": {
    "rimraf": "3.0.2",
    "typescript": "4.8.4"
  },
  "files": [
    "./build/**/*"
  ],
  "dependencies": {
    "@kubernetes/client-node": "0.17.1",
    "@monokle/validation": "0.7.1",
    "@open-policy-agent/opa-wasm": "1.8.0",
    "@reduxjs/toolkit": "1.9.0",
    "lodash": "4.17.21",
    "nodemon": "2.0.20",
    "react": "18.2.0",
    "react-monaco-editor": "0.50.1",
    "runtypes": "6.6.0",
    "type-fest": "3.2.0",
    "yaml": "2.1.3"
  },
  "exports": {
    "./constants/*": "./build/constants/*.js",
    "./models": "./build/models/index.js",
    "./styles/*": "./build/styles/*.js",
    "./utils": "./build/utils/index.js"
  }
}
